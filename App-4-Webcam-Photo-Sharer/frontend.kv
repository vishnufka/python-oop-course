<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        Camera:
            id: camera
            resolution: (640,480)
            play: False
            size_hint_y: 0.8
        Button:
            id: camera_button
            text: "Start Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
        Button:
            text: "Capture Image"
            on_press: root.capture()
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 5
        spacing: 5
        Image:
            id: img
            size_hint_y: 1.0


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"